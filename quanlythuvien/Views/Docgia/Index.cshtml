
@model IEnumerable<Models.Framework.THEDOCGIA>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Thông tin thẻ độc giả</h2>

@using (Html.BeginForm("Index", "DocGia", FormMethod.Get))
{

    <b>Search by: </b> @Html.RadioButton("searchBy", "HoTenDocGia", true) <text>Ho Ten Doc Gia</text>
    @Html.RadioButton("searchBy", "TenLoaiDocGia") <text>Ten Loai Doc Gia</text>
    @Html.RadioButton("searchBy", "none") <text>None</text>


