                @Html.DisplayFor(modelItem => item.HoTenDocGia)
            </td>
            <td>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(model => item.NgayLapThe)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaTheDocGia }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaTheDocGia }) |
